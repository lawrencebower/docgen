<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans classpath:/org/springframework/beans/factory/xml/spring-beans-3.1.xsd">

    <!--BUSINESS BEANS-->
    <bean name="customerSelectionCB"
          class="org.lawrencebower.docgen.web_logic.business.controler_business.customer_selection.CustomerSelectionCB"/>

    <bean name="productSelectionCB"
          class="org.lawrencebower.docgen.web_logic.business.controler_business.product_selection.ProductSelectionCB"/>

    <bean name="dataEntryCB"
          class="org.lawrencebower.docgen.web_logic.business.controler_business.data_entry.DataEntryCB"/>

    <bean name="viewableComponentFilter"
          class="org.lawrencebower.docgen.web_logic.business.utils.ViewableComponentFilterImpl"/>

    <bean name="autoMappedComponentMapper"
          class="org.lawrencebower.docgen.web_logic.business.mapping.auto_mapped.mapper.AMComponentMapper"
          init-method="initMappers">

        <property name="businessMapper">
            <bean class="org.lawrencebower.docgen.web_logic.business.mapping.auto_mapped.component.business.BusinessMapper"
                  init-method="initMappers"/>
        </property>
        <property name="customerMapper">
            <bean class="org.lawrencebower.docgen.web_logic.business.mapping.auto_mapped.component.customer.CustomerMapper"
                  init-method="initMappers"/>
        </property>
        <property name="vendorMapper">
            <bean class="org.lawrencebower.docgen.web_logic.business.mapping.auto_mapped.component.vendor.VendorMapper"
                  init-method="initMappers"/>
        </property>
    </bean>

    <bean name="fieldMapper"
          class="org.lawrencebower.docgen.web_logic.business.mapping.field_value.FieldMapperImpl"/>

    <bean name="viewUtils"
          class="org.lawrencebower.docgen.web_logic.business.utils.ViewUtilsImpl"/>

    <bean name="tableComponentValueSetter"
          class="org.lawrencebower.docgen.web_logic.business.table_component.TableComponentValueSetterImpl"/>

    <bean name="tableComponentCalculator"
          class="org.lawrencebower.docgen.web_logic.business.component_calculation.table.BasicTableComponentCalculator"/>

    <bean name="tableComponentProductInjector"
          class="org.lawrencebower.docgen.web_logic.business.injection.product.TableComponentProductInjectorImpl"/>

    <bean name="productInjectionMapper"
          class="org.lawrencebower.docgen.web_logic.business.injection.product.mapper.ProductInjectionMapperImpl">

        <property name="nameMapper">
            <bean class="org.lawrencebower.docgen.web_logic.business.injection.product.mapper.PINameMapper"/>
        </property>
        <property name="nameAndDescriptionMapper">
            <bean class="org.lawrencebower.docgen.web_logic.business.injection.product.mapper.PINameAndDescriptionMapper"/>
        </property>
        <property name="commercialInvoiceMapper">
            <bean class="org.lawrencebower.docgen.web_logic.business.injection.product.mapper.PICommercialInvoiceMapper"/>
        </property>
        <property name="harmonizedTariffMapper">
            <bean class="org.lawrencebower.docgen.web_logic.business.injection.product.mapper.PIHarmonizedTariffMapper"/>
        </property>
        <property name="originMapper">
            <bean class="org.lawrencebower.docgen.web_logic.business.injection.product.mapper.PIOriginMapper"/>
        </property>
        <property name="quantityMapper">
            <bean class="org.lawrencebower.docgen.web_logic.business.injection.product.mapper.PIQuantityMapper"/>
        </property>
        <property name="valueMapper">
            <bean class="org.lawrencebower.docgen.web_logic.business.injection.product.mapper.PIValueMapper"/>
        </property>
    </bean>

    <!--VIEW BEANS-->

    <bean name="documentSet"
          class="org.lawrencebower.docgen.web_logic.view.document.DocumentSet"
          scope="prototype"/>

    <bean name="documentSetFactory"
          class="org.lawrencebower.docgen.web_logic.view.document.DocumentSetFactory">
        <lookup-method name="createDocumentInfoSet" bean="documentSet"/>
    </bean>

    <bean name="contactView"
          class="org.lawrencebower.docgen.web_logic.view.contact.ContactView"
          scope="prototype"/>

    <bean name="contactViewFactory"
          class="org.lawrencebower.docgen.web_logic.view.contact.ContactViewFactory">
        <lookup-method name="createContactView" bean="contactView"/>
    </bean>

    <bean name="productView"
          class="org.lawrencebower.docgen.web_logic.view.product.ProductView"
          scope="prototype"/>

    <bean name="productViewFactory"
          class="org.lawrencebower.docgen.web_logic.view.product.ProductViewFactory">
        <lookup-method name="createProductView" bean="productView"/>
    </bean>

    <bean name="documentView"
          class="org.lawrencebower.docgen.web_logic.view.document.DocumentView"
          scope="prototype"/>

    <bean name="documentViewBuilder"
          class="org.lawrencebower.docgen.web_logic.view.document.DocumentViewBuilder"
          scope="prototype"/>

    <bean name="documentViewFactory"
          class="org.lawrencebower.docgen.web_logic.view.document.DocumentViewFactory">
        <lookup-method name="createDocumentView" bean="documentView"/>
    </bean>

    <bean name="componentViewFactory"
          class="org.lawrencebower.docgen.web_logic.view.document.component.DocComponentViewFactory">
        <lookup-method name="getCheckBoxComponentView" bean="checkBoxComponentView"/>
        <lookup-method name="getTableComponentView" bean="tableComponentView"/>
        <lookup-method name="getTextAreaComponentView" bean="textAreaComponentView"/>
        <lookup-method name="getTextComponentView" bean="textComponentView"/>
    </bean>

    <bean name="checkBoxComponentView"
          class="org.lawrencebower.docgen.web_logic.view.document.component.CheckBoxComponentView"
          scope="prototype"/>
    <bean name="tableComponentView"
          class="org.lawrencebower.docgen.web_logic.view.document.component.TableComponentView"
          scope="prototype"/>
    <bean name="textAreaComponentView"
          class="org.lawrencebower.docgen.web_logic.view.document.component.TextAreaComponentView"
          scope="prototype"/>
    <bean name="textComponentView"
          class="org.lawrencebower.docgen.web_logic.view.document.component.TextComponentView"
          scope="prototype"/>

</beans>