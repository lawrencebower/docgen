<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
             http://www.springframework.org/schema/beans classpath:/org/springframework/beans/factory/xml/spring-beans-3.1.xsd
             http://www.springframework.org/schema/context classpath:/org/springframework/context/config/spring-context-3.1.xsd">

    <bean name="customerSelectionCB"
          class="org.lawrencebower.docgen.web_logic.business.controler_business.customer_selection.CustomerSelectionCB"/>

    <bean name="productSelectionCB"
          class="org.lawrencebower.docgen.web_logic.business.controler_business.product_selection.ProductSelectionCB"/>

    <bean name="dataEntryCB"
          class="org.lawrencebower.docgen.web_logic.business.controler_business.data_entry.DataEntryCB"/>

    <bean name="viewableComponentFilter"
          class="org.lawrencebower.docgen.web_logic.business.controler_business.data_entry.ViewableComponentFilter"/>

    <bean name="customerProductMappings"
          class="org.lawrencebower.docgen.web_logic.business.mapping.CustomerProduct_Document_Mappings"/>

    <bean name="fieldMapper"
          class="org.lawrencebower.docgen.web_logic.business.mapping.FieldMapper"/>

    <bean name="reservedFieldMapper"
          class="org.lawrencebower.docgen.web_logic.business.mapping.AutoMappedFieldMapper"/>

    <bean name="viewUtils"
          class="org.lawrencebower.docgen.web_logic.business.utils.ViewUtils"/>

    <bean name="componentViewFactory"
          class="org.lawrencebower.docgen.web_logic.view.document_info.DocComponentViewFactory">
        <lookup-method name="getCheckBoxComponentView" bean="checkBoxComponentView"/>
        <lookup-method name="getTableComponentView" bean="tableComponentView"/>
        <lookup-method name="getTextAreaComponentView" bean="textAreaComponentView"/>
        <lookup-method name="getTextComponentView" bean="textComponentView"/>
    </bean>

    <bean name="checkBoxComponentView"
          class="org.lawrencebower.docgen.web_logic.view.document_info.component.CheckBoxComponentView"
          scope="prototype"/>
    <bean name="tableComponentView"
          class="org.lawrencebower.docgen.web_logic.view.document_info.component.TableComponentView"
          scope="prototype"/>
    <bean name="textAreaComponentView"
          class="org.lawrencebower.docgen.web_logic.view.document_info.component.TextAreaComponentView"
          scope="prototype"/>
    <bean name="textComponentView"
          class="org.lawrencebower.docgen.web_logic.view.document_info.component.TextComponentView"
          scope="prototype"/>

    <bean name="tableComponentValueSetter" class="org.lawrencebower.docgen.web_logic.business.table_component.TableComponentValueSetter"/>

    <bean name="componentCalculator"
          class="org.lawrencebower.docgen.web_logic.business.component_calculation.ComponentCalculator"/>

</beans>