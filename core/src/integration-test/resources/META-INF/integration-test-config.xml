<beans:beans xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns:context="http://www.springframework.org/schema/context"
             xsi:schemaLocation="
             http://www.springframework.org/schema/beans classpath:/org/springframework/beans/factory/xml/spring-beans-3.1.xsd
             http://www.springframework.org/schema/context classpath:/org/springframework/context/config/spring-context-3.1.xsd">


    <beans:import resource="core-context.xml"/>
    <beans:import resource="integration-test-params.xml"/>

    <beans:bean id="abstractIntegrationTest"
                class="org.lawrencebower.docgen.core.AbstractIntegrationTest"
                abstract="true"/>

    <beans:bean id="overlayDocumentInfoIntegrationTest"
                class="org.lawrencebower.docgen.core.document.OverlayDocumentInfoIntegrationTest"
                parent="abstractIntegrationTest"/>

    <beans:bean id="customDocumentInfoIntegrationTest"
                class="org.lawrencebower.docgen.core.document.CustomDocumentInfoIntegrationTest"
                parent="abstractIntegrationTest"/>

    <beans:bean id="testFileUtils" class="org.lawrencebower.docgen.core.generator.utils.ChecksumUtils"/>
    <beans:bean id="testFileLineFilter" class="org.lawrencebower.docgen.core.generator.utils.TestFileLineFilter"/>

    <context:component-scan base-package="org.lawrencebower.docgen.core"/>

</beans:beans>