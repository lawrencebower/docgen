<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
             http://www.springframework.org/schema/beans classpath:/org/springframework/beans/factory/xml/spring-beans-3.1.xsd
             http://www.springframework.org/schema/context classpath:/org/springframework/context/config/spring-context-3.1.xsd">

    <bean id="fda2887"
          class="org.lawrencebower.docgen.doc_examples.fda_2887.FDA_2887"
          init-method="prepareComponents"
          scope="prototype"/>

    <bean id="fcc740"
          class="org.lawrencebower.docgen.doc_examples.fcc_740.FCC_740"
          init-method="prepareComponents"
          scope="prototype"/>

    <bean id="deliveryNote"
          class="org.lawrencebower.docgen.doc_examples.delivery_note.DeliveryNote"
          init-method="prepareComponents"
          scope="prototype"/>

    <bean id="commercialInvoice"
          class="org.lawrencebower.docgen.doc_examples.commercial_invoice.CommercialInvoice"
          init-method="prepareComponents"
          scope="prototype"/>

    <bean name="viewFactory"
          class="org.lawrencebower.docgen.web_logic.view.view_factory.ViewFactoryImpl"
          init-method="init">

        <property name="customerFactory">
            <bean class="org.lawrencebower.docgen.doc_examples.factory.CustomerFactoryTestImpl"
                  init-method="initCustomers"/>
        </property>

        <property name="customerProductFactory">
            <bean class="org.lawrencebower.docgen.web_logic.view.view_factory.CustomerProductMappingFactoryTestImpl"
                  init-method="initMappings"/>
        </property>

        <property name="documentFactory">
            <bean class="org.lawrencebower.docgen.doc_examples.factory.DocumentFactoryTestImpl">
                <lookup-method name="getCommercialInvoice" bean="commercialInvoice"/>
                <lookup-method name="getDeliveryNote" bean="deliveryNote"/>
                <lookup-method name="getFDA2887" bean="fda2887"/>
                <lookup-method name="getFCC740" bean="fcc740"/>
            </bean>
        </property>

        <property name="productFactory">
            <bean class="org.lawrencebower.docgen.doc_examples.factory.ProductFactoryTestImpl"
                  init-method="initProducts"/>
        </property>

        <property name="vendorFactory">
            <bean class="org.lawrencebower.docgen.doc_examples.factory.VendorFactoryTestImpl"
                  init-method="initVendor"/>
        </property>
    </bean>

    <context:component-scan base-package="org.lawrencebower.docgen.doc_examples"/>

</beans>