<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
             http://www.springframework.org/schema/beans classpath:/org/springframework/beans/factory/xml/spring-beans-3.1.xsd
             http://www.springframework.org/schema/context classpath:/org/springframework/context/config/spring-context-3.1.xsd">

    <bean id="fda2887"
          class="org.lawrencebower.docgen.doc_examples.FDA_2887"
          init-method="prepareComponents"
          scope="prototype"/>

    <bean id="deliveryNote"
          class="org.lawrencebower.docgen.doc_examples.DeliveryNote"
          init-method="prepareComponents"
          scope="prototype"/>

    <bean id="commercialInvoice"
          class="org.lawrencebower.docgen.doc_examples.CommercialInvoice"
          init-method="prepareComponents"
          scope="prototype"/>

    <bean id="customComponentConverter" class="org.lawrencebower.docgen.doc_examples.CustomComponentConverter"/>
    <bean id="overlayComponentConverter" class="org.lawrencebower.docgen.doc_examples.OverlayComponentConverter"/>

    <bean name="modelFactory"
          class="org.lawrencebower.docgen.doc_examples.ModelFactoryCodeImpl"
          init-method="init">
        <lookup-method name="getCommercialInvoice" bean="commercialInvoice"/>
        <lookup-method name="getDeliveryNote" bean="deliveryNote"/>
        <lookup-method name="getFDA2887" bean="fda2887"/>
    </bean>

    <context:component-scan base-package="org.lawrencebower.docgen.doc_examples"/>

</beans>